<Window x:Class="ShoppingListApp.SL_AddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingListApp"
        mc:Ignorable="d"
        Width="600" Height="350"
      Title="SL_AddItem">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Add_ItemBT" Content="Add" Click="Add_ItemBT_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Width="60" Height="25"/>
        <Button x:Name="SLAdd_close" Click="SLAdd_closeBT" Content="Exit" Grid.Row="3" Width="60" Height="25" HorizontalAlignment="Right" Margin="10"/>
        <Canvas>
            <TextBlock Text="Product Name: " FontSize="20" Canvas.Top="50"  Margin="15" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="1" />
            <TextBox Canvas.Top="69" Canvas.Left="150" Width="200" Height="25" Name="TB_sladditem"/>
        </Canvas>
    </Grid>
</Window>
